<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- blanco translúcido al presionar -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF"/> <!-- blanco más translúcido de fondo -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF"/> <!-- borde blanco suave -->
        </shape>
    </item>
</selector>
